{
  "metadata": [{
    "src": [
      {
        "src": "..",
        "files": [
          "*.csproj"
        ],
      }
    ],
    "dest": "api"
  }],
  "build": {
    "content": [
      {
          "files": [ "toc.yml", "index.md"]
      },
      {
        "src": "api",
        "files": ["*.yml"],
        "dest": "api"
      },
      {
        "src": "manual",
        "files": [ "toc.yml", "*.md" ],
        "dest": "manual"
      }
    ],
    "resource": [ { "files": "images/**" } ],
    "dest": "../../_site",
    "globalMetadata": {
      "_appTitle": "__NAME__",
      "_appName": "__NAME__",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "_disableContribution": true,
      "_gitContribute": {
          "repo": "https://github.com/FilippoGurioli-master-thesis/unity-package-template",
          "branch": "main"
      },
      "_lang": "en"
    },
    "template": [ "default", "modern", "custom-docfx-template" ]
  }
}
