{
  "extends": [
    "config:recommended",
    ":rebaseStalePrs",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    "abandonments:recommended"
  ],
  "assignees": [
    "FilippoGurioli"
  ],
  "automerge": true,
  "dependencyDashboard": true,
  "abandonmentThreshold": "3 years",
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "__NAMESPACE__/package.json"
  ],
  "git-submodules": {
    "enabled": true
  },
  "forkProcessing": "enabled",
  "labels": [
    "dependencies"
  ],
  "suppressNotifications": [
    "dependencyLookupWarnings"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/)Packages/manifest\\.json$/"
      ],
      "matchStrings": [
        "\"(?<depName>[^\"]+)\"\\s*:\\s*\"(?<currentValue>[^\"#]+)\""
      ],
      "datasourceTemplate": "unity3d-packages",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "description": "Wait one day before proposing updates to github refs",
      "matchDatasources": [
        "git-refs"
      ],
      "internalChecksFilter": "strict",
      "minimumReleaseAge": "1 day"
    },
    {
      "description": "Wait three days for npm updates (npm retraction time)",
      "matchDatasources": [
        "npm"
      ],
      "internalChecksFilter": "strict",
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Do not wait for updates from relatively stable sources",
      "matchDatasources": [
        "github-releases",
        "github-tags"
      ],
      "internalChecksFilter": "strict",
      "minimumReleaseAge": null
    },
    {
      "description": "Do not wait for updates from github actions",
      "matchManagers": [
        "github-actions"
      ],
      "internalChecksFilter": "strict",
      "minimumReleaseAge": null
    },
    {
      "description": "Updates to GitHub Actions should be tagged as 'ci'",
      "matchFileNames": [
        ".github/workflows/*.yml",
        ".github/workflows/*.yaml"
      ],
      "semanticCommitType": "ci"
    },
    {
      "description": "Ignore Unity built-in modules",
      "matchDepNames": [
        "^com\\.unity\\.modules\\."
      ],
      "enabled": false
    },
    {
      "description": "Apply core-deps scope to Unity Editor and package updates",
      "matchManagers": [
        "custom.regex",
        "unity3d"
      ],
      "matchDatasources": [
        "unity3d-packages",
        "unity3d"
      ],
      "semanticCommitScope": "core-deps"
    }
  ],
  "prConcurrentLimit": 25,
  "prCreation": "immediate",
  "prHourlyLimit": 0,
  "rebaseWhen": "behind-base-branch",
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "separateMultipleMinor": true,
  "minimumReleaseAge": null,
  "baseBranchPatterns": [
    "develop"
  ]
}
