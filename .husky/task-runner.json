{
   "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
   "tasks": [
      {
         "name": "commit-message-linter",
         "command": "dotnet",
         "args": ["husky", "exec", ".automation/CommitLint.csx", "--args", "${args}"]
      },
      {
         "name": "format-csharp",
         "group": "pre-commit",
         "command": "dotnet",
         "args": [
            "tool", "run", "csharpier", "format", "./__NAMESPACE__"
         ],
      },
      {
         "name": "validate-meta",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["tool", "run", "dotnet-script", ".automation/ValidateMetaFiles.csx"]
      },
      {
         "name": "validate-scenes",
         "group": "pre-commit",
         "command": "dotnet",
         "args": ["tool", "run", "dotnet-script", ".automation/ValidateSceneFiles.csx"]
      }
   ]
}
